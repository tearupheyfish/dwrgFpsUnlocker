//@ref DevDoc/log.cov.md
#ifndef DWRGFPSUNLOCKER_QDEBUG_H
#define DWRGFPSUNLOCKER_QDEBUG_H

#include <iostream>
#include <ios>

namespace Qt{
    inline auto& hex = std::hex;
    inline auto& dec = std::dec;
}
//nonono因为ErrReport所以不能接受log了

class HoleBuffer:public std::streambuf{
protected:
    int overflow(int c) override
    {
        return c;
    }
    int sync() override
    {
        return 0;
    }
};

class HoleStream:public std::ostream{
public:
    HoleStream(): std::ostream(&holebuffer){}
private:
    HoleBuffer holebuffer;
};

inline static HoleStream null;

#define qDebug() null
#define qInfo() null
#define qWarning() null
#define qCritical() null

#endif //DWRGFPSUNLOCKER_QDEBUG_H
